<?xml version="1.0" encoding="utf-8"?>
<!--Merupakan root (induk) dari tampilan, yang digunakan untuk menentukan posisi dan hubungan antar elemen dalam tampilan secara fleksibel.-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".DetailedActivityProd">
<!--agar susunan dari konten linear(vertical-->
    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="730dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
<!--menampilkan nama barang-->
        <TextView
            android:id="@+id/detailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:text="Recipe Name"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            android:textStyle="bold" />
<!--Menampilkan text komposisi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="komposisi :"
            android:textColor="@color/lavender"
            android:textSize="18sp"
            android:textStyle="bold" />
<!--menampilkan isi dari komposisi-->
        <TextView
            android:id="@+id/detailKomp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/tjiwikomp"
            android:textColor="#000000"
            android:textSize="16sp" />
<!--menampilkan text kegunaan produk-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Kegunaan:"
            android:textColor="@color/lavender"
            android:textSize="18sp"
            android:textStyle="bold" />
<!--isi dari kegunaan produk atau deskripsi-->
        <TextView
            android:id="@+id/detailDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/tjiwiDesc"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>